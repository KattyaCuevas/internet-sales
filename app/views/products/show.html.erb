<section class="productos">

  <div class="field">
    <strong>Título:</strong>
    <%= @product.title %>
  </div>

  <div class="fiel">
    <strong>Descripción:</strong>
    <%= @product.description %>
  </div>

  <div class="field">
    <strong>Url de la imagen:</strong>
    <%= @product.image_url %>
  </div>

  <div class="field">
    <strong>Precio:</strong>
    <%= @product.price %>
  </div>

  <%= link_to 'Editar', edit_product_path(@product) %> |
  <%= link_to 'Atrás', products_path %>

</section>